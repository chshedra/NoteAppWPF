<Window
	x:Class="NoteAppWPF.AboutWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:NoteAppWPF"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="AboutWindow"
	Width="400"
	Height="350"
	Icon="Resources/icon.ico"
	Background="LightGray"
	mc:Ignorable="d">
	<Grid Margin="12" Background="LightGray">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="2*" />
		</Grid.RowDefinitions>
		<TextBlock
			Grid.Row="0"
			Margin="3"
			FontSize="30"
			FontWeight="Bold"
			Text="NoteApp" />
		<TextBlock
			Grid.Row="1"
			Margin="3"
			Text="v. 1.0.0" />
		<TextBlock
			Grid.Row="2"
			Margin="3"
			VerticalAlignment="Center"
			Text="Author: Chshedrin Andrey" />
		<TextBlock Grid.Row="3">
			e-mail for feedback:<Hyperlink NavigateUri="shedrin2001@mail.ru">shedrin2001@mail.ru</Hyperlink>
		</TextBlock>
		<TextBlock Grid.Row="4">
			GitHub:<Hyperlink NavigateUri="https://github.com/chshedra/NoteApp">chshedra/NoteApp</Hyperlink>
		</TextBlock>
		<TextBlock Grid.Row="5" VerticalAlignment="Bottom">Chshedrin Andrey 2021</TextBlock>

	</Grid>
</Window>
